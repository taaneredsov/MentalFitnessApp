# Ralph Configuration for Corporate Mental Fitness PWA
# Generated: 2026-01-30

# Project settings
PROJECT_NAME="corporate-mental-fitness-program"
PROJECT_TYPE="typescript"

# Loop settings
MAX_CALLS_PER_HOUR=100
CLAUDE_TIMEOUT_MINUTES=30
CLAUDE_OUTPUT_FORMAT="text"

# Tool permissions - allow common development tools
ALLOWED_TOOLS="Write,Read,Edit,Glob,Grep,Bash(git *),Bash(npm *),Bash(npx *),Bash(curl *),Task,WebFetch"

# Session management
SESSION_CONTINUITY=true
SESSION_EXPIRY_HOURS=24

# Circuit breaker thresholds
CB_NO_PROGRESS_THRESHOLD=5
CB_SAME_ERROR_THRESHOLD=3

# Custom paths
PROMPT_FILE=".ralph/PROMPT.md"
FIX_PLAN_FILE=".ralph/fix_plan.md"
AGENT_FILE=".ralph/AGENT.md"
SPECS_DIR="specs"

# Logging
LOG_LEVEL="info"
LOG_DIR=".ralph/logs"
